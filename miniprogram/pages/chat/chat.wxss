/* chat.wxss */
.chat-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--bg-secondary);
}

.message-list {
  flex: 1;
  padding: var(--spacing-md);
  overflow-y: auto;
}

.message-item {
  display: flex;
  margin-bottom: var(--spacing-md);
  animation: fadeIn 0.3s ease-out;
}

.message-item.user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.user .message-avatar {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.message-content {
  max-width: 70%;
  margin: 0 16rpx;
  display: flex;
  flex-direction: column;
}

.message-text {
  background-color: var(--bg-primary);
  padding: 16rpx 20rpx;
  border-radius: var(--radius-md);
  font-size: var(--font-sm);
  line-height: 44rpx;
  box-shadow: var(--shadow-sm);
}

.user .message-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.message-time {
  font-size: 20rpx;
  color: var(--text-tertiary);
  margin-top: 8rpx;
  align-self: flex-start;
}

.user .message-time {
  align-self: flex-end;
}

.loading-tip {
  text-align: center;
  padding: 24rpx;
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

.input-bar {
  display: flex;
  padding: 16rpx;
  background-color: var(--bg-primary);
  border-top: 1rpx solid var(--border-color);
  align-items: center;
  gap: 16rpx;
}

.message-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background-color: var(--bg-secondary);
  border-radius: var(--radius-md);
  font-size: var(--font-sm);
}

.send-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: var(--radius-md);
  font-size: var(--font-sm);
  border: none;
}
