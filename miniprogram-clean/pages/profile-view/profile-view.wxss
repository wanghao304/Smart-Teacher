/* pages/profile-view/profile-view.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 50rpx 40rpx 40rpx;
  color: white;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 40rpx;
}

.btn-goto-profile {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  width: auto;
  display: inline-block;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx 0 140rpx;
}

.section {
  margin-bottom: 20rpx;
  background: white;
}

.section-title {
  padding: 30rpx 40rpx 20rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #6366f1;
}

/* 字段项 */
.field-item {
  display: flex;
  align-items: center;
  padding: 28rpx 40rpx;
  border-bottom: 1rpx solid #f1f5f9;
  min-height: 100rpx;
}

.field-item:last-child {
  border-bottom: none;
}

.field-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #64748b;
  flex-shrink: 0;
}

.field-value {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.field-value.text-multi {
  line-height: 1.6;
  max-height: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.field-value.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: #eff6ff;
  color: #6366f1;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.field-arrow {
  font-size: 36rpx;
  color: #cbd5e1;
  margin-left: 16rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.btn-secondary {
  background: white;
  color: #6366f1;
  border: 2rpx solid #6366f1;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  height: 80rpx;
  line-height: 80rpx;
}

/* 编辑弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
}

.modal-input {
  width: 100%;
  min-height: 200rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #1e293b;
  box-sizing: border-box;
}

.modal-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.modal-btn.cancel {
  background: #f1f5f9;
  color: #64748b;
}

.modal-btn.confirm {
  background: #6366f1;
  color: white;
}

.bottom-spacer {
  height: 40rpx;
}
