/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 40rpx;
  padding-bottom: 180rpx;
}

/* 进度条 */
.progress-header {
  margin-bottom: 50rpx;
}

.step-indicator {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.current-step {
  font-size: 48rpx;
  font-weight: 800;
  color: #6366f1;
}

.total-step {
  font-size: 28rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

.progress-bar {
  height: 8rpx;
  background: #e2e8f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1, #818cf8);
  border-radius: 4rpx;
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 问题区域 */
.question-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.question-desc {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 50rpx;
  line-height: 1.5;
}

.highlight {
  color: #6366f1;
  font-weight: 700;
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
  margin-bottom: 16rpx;
}

.tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 100rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
  transition: all 0.2s;
}

.input:focus {
  border-color: #6366f1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.textarea {
  width: 100%;
  min-height: 300rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  box-sizing: border-box;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

/* 选项网格 */
.option-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.option-card {
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #475569;
  text-align: center;
  transition: all 0.2s;
}

.option-card.active {
  background: #6366f1;
  color: white;
  border-color: #6366f1;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

/* 技能标签 */
.skill-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.skill-tag {
  padding: 16rpx 28rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #475569;
  transition: all 0.2s;
}

.skill-tag.active {
  background: #6366f1;
  color: white;
  border-color: #6366f1;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.25);
}

/* 双卡片 */
.dual-cards {
  display: flex;
  gap: 20rpx;
}

.card {
  flex: 1;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.2s;
}

.card.active {
  border-color: #6366f1;
  background: #eff6ff;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.15);
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.card-label {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 22rpx;
  color: #64748b;
}

/* 导师风格卡片 */
.mentor-style-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.style-card {
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 30rpx;
  transition: all 0.2s;
}

.style-card.active {
  border-color: #6366f1;
  background: #f8fafc;
}

.style-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.style-desc {
  font-size: 24rpx;
  color: #64748b;
}

/* 滑块标签 */
.slider-labels {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 12rpx;
  padding: 0 10rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 40rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  gap: 24rpx;
  z-index: 100;
}

.btn-prev {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
  font-size: 36rpx;
}

.btn-next {
  flex: 1;
  height: 80rpx;
  background: #1e293b;
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 20rpx rgba(30, 41, 59, 0.3);
}

.btn-next:active {
  transform: scale(0.98);
}
