/* pages/intro/intro.wxss */
.container {
  height: 100vh;
  overflow: hidden;
}

.intro-swiper {
  height: 100vh;
}

.slide-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 50rpx 150rpx;
  position: relative;
  box-sizing: border-box;
}

/* 渐变背景 */
.slide-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.slide-2 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.slide-3 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

/* 插图区域 */
.illustration-area {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.gradient-circle {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  animation: float 3s ease-in-out infinite;
}

.inner-circle {
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  box-shadow: inset 0 0 40rpx rgba(255,255,255,0.5);
}

/* Slide 3 专属样式 */
.mentor-avatars {
  display: flex;
  gap: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: white;
  color: #4facfe;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

/* 文本区域 */
.text-area {
  flex: 0.6;
  width: 100%;
  text-align: center;
  animation: fadeInUp 0.6s ease-out;
  margin-bottom: 40rpx;
}

.main-title {
  font-size: 48rpx;
  font-weight: 800;
  color: white;
  line-height: 1.3;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.sub-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
  padding: 0 30rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.highlight {
  color: #fff;
  font-weight: 700;
  background: rgba(0,0,0,0.15);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 按钮区域 */
.btn-area {
  width: 100%;
  display: flex;
  justify-content: center;
  animation: fadeInUp 0.8s ease-out;
}

.btn-next {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  border: 2rpx solid white;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
}

.btn-start {
  background: white !important;
  color: #4facfe !important;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.3);
  border: none;
}

.btn-next:active, .btn-start:active {
  transform: scale(0.96);
}

/* 跳过按钮 */
.skip-btn {
  position: absolute;
  top: calc(40rpx + env(safe-area-inset-top));
  right: 40rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 20rpx;
  z-index: 10;
  background: rgba(0,0,0,0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(5rpx);
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
