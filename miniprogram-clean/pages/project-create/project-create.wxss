/* pages/project-create/project-create.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 50rpx 40rpx 40rpx;
  color: white;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 模式切换 */
.mode-tabs {
  display: flex;
  background: white;
  padding: 20rpx;
  gap: 20rpx;
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #64748b;
  background: #f8fafc;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.mode-tab.active {
  background: linear-gradient(135deg, #eff6ff 0%, #e0e7ff 100%);
  color: #6366f1;
  border-color: #6366f1;
}

.content {
  height: calc(100vh - 300rpx);
  padding: 20rpx;
}

/* 自然语言模式 */
.natural-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.example-tips {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #6366f1;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #6366f1;
  margin-bottom: 16rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #475569;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.natural-input {
  width: 100%;
  min-height: 300rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

.btn-parse {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 12rpx;
  margin-top: 30rpx;
}

.btn-parse[disabled] {
  opacity: 0.6;
}

/* 结构化模式 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
  box-sizing: border-box;
}

.picker {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #1e293b;
}

.footer-btns {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn-cancel {
  flex: 1;
  background: #f1f5f9;
  color: #64748b;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  height: 90rpx;
}

.btn-create {
  flex: 2;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  height: 90rpx;
}
