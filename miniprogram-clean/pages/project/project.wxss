/* pages/project/project.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 40rpx;
}

/* 项目头部 */
.project-header {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 50rpx 40rpx;
  color: white;
}

.project-name {
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.project-meta {
  display: flex;
  gap: 12rpx;
}

.category, .difficulty {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.category {
  background: rgba(255,255,255,0.3);
}

.difficulty {
  background: rgba(255,255,255,0.2);
}

.difficulty.easy {
  color: #10b981;
}

.difficulty.hard {
  color: #ef4444;
}

/* 通用section */
.status-section, .progress-section, .mentors-section,
.desc-section, .chats-section, .actions-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.edit-progress, .add-mentor {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
}

/* 状态选项 */
.status-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.status-option {
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s;
}

.status-option.active {
  background: rgba(99, 102, 241, 0.1);
}

/* 进度条 */
.progress-display {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #f1f5f9;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
  transition: width 0.3s;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: #6366f1;
  min-width: 80rpx;
  text-align: right;
}

.progress-slider {
  width: 100%;
}

.edit-btns {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.btn-cancel-small, .btn-save-small {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.btn-cancel-small {
  background: #f1f5f9;
  color: #64748b;
}

.btn-save-small {
  background: #6366f1;
  color: white;
}

/* 导师关系图 */
.mentors-graph {
  position: relative;
  padding: 60rpx 0;
}

.project-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.project-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin: 0 auto 12rpx;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.3);
}

.project-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 600;
  max-width: 150rpx;
  word-wrap: break-word;
}

.mentor-nodes {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40rpx;
  margin-top: 80rpx;
}

.mentor-node {
  position: relative;
  text-align: center;
  width: 120rpx;
}

.mentor-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #f8fafc;
  border: 3rpx solid #6366f1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin: 0 auto 8rpx;
}

.mentor-name-small {
  font-size: 22rpx;
  color: #475569;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chat-icon, .remove-icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
}

.chat-icon {
  bottom: 60rpx;
  right: 0;
  background: #10b981;
  color: white;
}

.remove-icon {
  bottom: 60rpx;
  left: 0;
  background: #ef4444;
  color: white;
  font-size: 30rpx;
}

.empty-mentors {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 30rpx;
}

.btn-add-first {
  background: #6366f1;
  color: white;
  font-size: 26rpx;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  width: auto;
  display: inline-block;
}

/* 描述 */
.desc-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.8;
}

/* 对话列表 */
.chat-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.chat-item {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
}

.chat-mentor {
  font-size: 26rpx;
  font-weight: 600;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.chat-message {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.chat-date {
  font-size: 22rpx;
  color: #94a3b8;
}

/* 操作 */
.btn-delete-project {
  width: 100%;
  height: 80rpx;
  background: #ef4444;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
}

/* 导师选择器 */
.mentor-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  text-align: center;
}

.mentor-list {
  flex: 1;
  margin-bottom: 20rpx;
}

.mentor-option {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.mentor-avatar-option {
  width: 60rpx;
  height: 60rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.mentor-info-option {
  flex: 1;
}

.mentor-name-option {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.mentor-field-option {
  font-size: 24rpx;
  color: #64748b;
}

.btn-close-modal, .btn-create-mentor {
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-close-modal {
  background: #f1f5f9;
  color: #64748b;
}

.btn-create-mentor {
  background: #6366f1;
  color: white;
}