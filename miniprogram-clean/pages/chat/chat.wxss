/* pages/chat/chat.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
}

/* 项目横幅 */
.project-banner {
  background: linear-gradient(135deg, #eff6ff 0%, #e0e7ff 100%);
  border-bottom: 2rpx solid #c7d2fe;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.banner-icon {
  font-size: 28rpx;
}

.banner-text {
  font-size: 26rpx;
  color: #6366f1;
  font-weight: 600;
}

/* 消息容器 */
.messages-container {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 快捷问题 */
.quick-questions {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.quick-item {
  background: #eff6ff;
  border: 2rpx solid #c7d2fe;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #6366f1;
  margin-bottom: 12rpx;
  text-align: center;
  transition: all 0.3s;
}

.quick-item:active {
  background: #6366f1;
  color: white;
  transform: scale(0.98);
}

/* 消息包装器 */
.message-wrapper {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.message-wrapper.user {
  align-items: flex-end;
}

.message-wrapper.assistant {
  align-items: flex-start;
}

/* 消息气泡 */
.message {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  max-width: 80%;
}

.user-message {
  flex-direction: row-reverse;
}

.ai-message {
  flex-direction: row;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e2e8f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  flex-shrink: 0;
}

.message-content {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  word-wrap: break-word;
}

.user-message .message-content {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

.message-time {
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 8rpx;
  padding: 0 16rpx;
}

/* AI输入中 */
.message-content.typing {
  display: flex;
  gap: 8rpx;
  padding: 20rpx 30rpx;
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  background: #94a3b8;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.7;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

.bottom-spacer {
  height: 40rpx;
}

/* 输入区域 */
.input-area {
  background: white;
  border-top: 1rpx solid #e2e8f0;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tool-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f1f5f9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.input-container {
  flex: 1;
}

.message-input {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  min-height: 60rpx;
}

.voice-container {
  flex: 1;
}

.voice-btn {
  background: #6366f1;
  color: white;
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-btn:active {
  background: #4f46e5;
}

.send-btn {
  background: #e2e8f0;
  color: #94a3b8;
  font-size: 26rpx;
  font-weight: 600;
  padding: 18rpx 30rpx;
  border-radius: 50rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.send-btn.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

/* 功能菜单 */
.action-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.menu-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.menu-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 30rpx;
  text-align: center;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s;
}

.menu-item:active {
  background: #e2e8f0;
  transform: scale(0.98);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-label {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.menu-close {
  width: 100%;
  height: 80rpx;
  background: #f1f5f9;
  color: #64748b;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  margin-top: 20rpx;
}
