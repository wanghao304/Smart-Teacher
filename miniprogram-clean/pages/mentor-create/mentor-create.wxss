/* pages/mentor-create/mentor-create.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 140rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  text-align: center;
  padding: 50rpx 0 16rpx;
}

.page-desc {
  font-size: 26rpx;
  color: #64748b;
  text-align: center;
  padding-bottom: 40rpx;
}

/* 模式选择 */
.mode-cards {
  padding: 0 30rpx;
}

.mode-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  border: 3rpx solid transparent;
  transition: all 0.3s;
  position: relative;
}

.mode-card:active {
  transform: scale(0.98);
  border-color: #6366f1;
}

.mode-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.mode-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.mode-desc {
  font-size: 26rpx;
  color: #64748b;
}

.mode-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: white;
  font-size: 22rpx;
  font-weight: 700;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 名人列表 */
.celebrity-list {
  height: calc(100vh - 300rpx);
  padding: 0 30rpx;
}

.celebrity-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  border: 3rpx solid #e2e8f0;
  transition: all 0.3s;
}

.celebrity-item.selected {
  border-color: #6366f1;
  background: #eff6ff;
}

.celeb-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.celeb-info {
  flex: 1;
}

.celeb-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.celeb-field {
  font-size: 24rpx;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.celeb-desc {
  font-size: 24rpx;
  color: #64748b;
}

.celeb-check {
  font-size: 40rpx;
  color: #6366f1;
  margin-left: 20rpx;
}

/* 自定义表单 */
.form-container {
  height: calc(100vh - 300rpx);
  padding: 0 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.input {
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
}

.textarea {
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1e293b;
  min-height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

/* AI推荐 */
.ai-loading {
  text-align: center;
  padding: 150rpx 0;
}

.loading-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

.ai-mentors {
  height: calc(100vh - 260rpx);
  padding: 0 30rpx;
}

.ai-mentor-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  border: 2rpx solid #e2e8f0;
}

.mentor-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.mentor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.mentor-basic {
  flex: 1;
}

.mentor-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 6rpx;
}

.mentor-field {
  font-size: 24rpx;
  color: #6366f1;
}

.mentor-background {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.mentor-reason,
.mentor-method {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.reason-label,
.method-label {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.reason-text,
.method-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.5;
}

.select-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.empty-ai {
  text-align: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 40rpx;
}

.btn-profile {
  background: #6366f1;
  color: white;
  font-size: 28rpx;
  border-radius: 50rpx;
  padding: 20rpx 50rpx;
  width: auto;
  display: inline-block;
}

/* 底部按钮 */
.footer-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  gap: 20rpx;
}

.btn-back {
  flex: 1;
  background: #f1f5f9;
  color: #64748b;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.btn-confirm {
  flex: 2;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  height: 80rpx;
  line-height: 80rpx;
}
