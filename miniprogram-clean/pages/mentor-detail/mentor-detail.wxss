/* pages/mentor-detail/mentor-detail.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 140rpx;
}

/* 导师头部 */
.mentor-header {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 50rpx 40rpx;
  position: relative;
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
  position: relative;
  flex-shrink: 0;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #6366f1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 3rpx solid white;
}

.mentor-basic {
  flex: 1;
}

.mentor-name, .name-input {
  font-size: 40rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 8rpx;
}

.name-input {
  background: rgba(255,255,255,0.2);
  border: 2rpx solid white;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
}

.mentor-field, .field-input {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

.field-input {
  background: rgba(255,255,255,0.2);
  border: 2rpx solid white;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
}

.type-tag {
  display: inline-block;
  background: rgba(255,255,255,0.3);
  color: white;
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 数据统计 */
.stats-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

/* 关键话题 */
.topics-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.topics-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.topic-item {
  display: flex;
  align-items: center;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
}

.topic-name {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.topic-count {
  font-size: 24rpx;
  color: #64748b;
  margin-right: 12rpx;
}

.topic-trend {
  font-size: 28rpx;
  font-weight: 700;
}

.topic-trend.up {
  color: #10b981;
}

.topic-trend.down {
  color: #ef4444;
}

.topic-trend.stable {
  color: #94a3b8;
}

/* 信息区域 */
.info-section, .methodology-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.background-text, .methodology-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.8;
}

.background-input, .methodology-input {
  width: 100%;
  min-height: 200rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #1e293b;
  line-height: 1.6;
  box-sizing: border-box;
}

/* 操作区域 */
.actions-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.action-btns {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-edit, .btn-export, .btn-delete,
.btn-cancel, .btn-save {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-edit {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

.btn-export {
  background: #10b981;
  color: white;
}

.btn-delete {
  background: #ef4444;
  color: white;
}

.btn-cancel {
  background: #f1f5f9;
  color: #64748b;
}

.btn-save {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
}

/* 底部对话按钮 */
.footer-chat {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.btn-chat {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 50rpx;
}

/* 头像选择器 */
.avatar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  text-align: center;
}

.avatar-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.avatar-option {
  aspect-ratio: 1;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  transition: all 0.3s;
}

.avatar-option:active {
  transform: scale(0.95);
  background: #eff6ff;
  border-color: #6366f1;
}

.btn-upload, .btn-close {
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.btn-upload {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

.btn-close {
  background: #f1f5f9;
  color: #64748b;
}