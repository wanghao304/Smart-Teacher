/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 120rpx;
}

/* B区：数据统计 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 800;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-value.success {
  color: #10b981;
}

.stat-value.failed {
  color: #ef4444;
}

.stat-value.abandoned {
  color: #f59e0b;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
}

/* A区：项目展示 */
.project-section {
  padding: 30rpx 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.project-card {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(99, 102, 241, 0.3);
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.project-name {
  font-size: 36rpx;
  font-weight: 700;
}

.project-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.project-status.active {
  background: rgba(255, 255, 255, 0.3);
}

.project-progress {
  margin-bottom: 24rpx;
}

.progress-label {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-bottom: 12rpx;
  opacity: 0.9;
}

.progress-percent {
  font-weight: 700;
}

.progress-bar {
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: white;
  border-radius: 6rpx;
  transition: width 0.3s;
}

.project-mentors {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.mentor-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-right: 16rpx;
}

.mentor-avatars {
  display: flex;
  gap: -12rpx;
}

.mentor-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: white;
  color: #6366f1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  border: 3rpx solid #6366f1;
}

.project-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.project-arrow {
  font-weight: 600;
}

.empty-project {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
  margin-bottom: 30rpx;
}

.btn-create-project {
  background: #6366f1;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 20rpx 50rpx;
  width: auto;
  display: inline-block;
}

/* C区：快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  border: 2rpx solid #e2e8f0;
}

.action-text {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* D区：对话框 */
.chat-section {
  background: white;
  padding: 20rpx;
}

.chat-header {
  margin-bottom: 16rpx;
}

.mentor-picker {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e2e8f0;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selected-mentor {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
}

.mentor-icon {
  font-size: 32rpx;
}

.picker-arrow {
  font-size: 20rpx;
  color: #94a3b8;
}

.mentor-empty {
  background: #fef3c7;
  border: 2rpx solid #fbbf24;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: #92400e;
}

.link {
  color: #6366f1;
  font-weight: 600;
}

.chat-input-wrapper {
  display: flex;
  gap: 12rpx;
  align-items: flex-end;
}

.input-container {
  flex: 1;
}

.chat-input {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  min-height: 80rpx;
}

.voice-btn {
  background: #6366f1;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-tools {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.tool-btn {
  width: 70rpx;
  height: 70rpx;
  background: #f1f5f9;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border: 2rpx solid #e2e8f0;
}

.send-btn {
  background: #6366f1;
  color: white;
  font-size: 26rpx;
  font-weight: 600;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
