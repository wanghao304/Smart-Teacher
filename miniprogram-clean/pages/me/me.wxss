/* pages/me/me.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 120rpx;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: white;
  padding: 10rpx;
}

.member-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #fbbf24;
  color: white;
  font-size: 20rpx;
  font-weight: 700;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  border: 2rpx solid white;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
}

.identity {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.member-btn {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  padding: 16rpx 28rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
}

/* 数据统计 */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 30rpx 0;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Section */
.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #64748b;
  padding: 30rpx 40rpx 16rpx;
}

/* 菜单列表 */
.menu-list {
  background: white;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f1f5f9;
  transition: background 0.2s;
}

.menu-item:active {
  background: #f8fafc;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 44rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #1e293b;
  font-weight: 500;
}

.menu-desc {
  font-size: 24rpx;
  color: #94a3b8;
  margin-right: 8rpx;
}

.menu-badge {
  background: #6366f1;
  color: white;
  font-size: 20rpx;
  font-weight: 700;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
}

.menu-badge.red {
  background: #ef4444;
}

.menu-arrow {
  font-size: 40rpx;
  color: #cbd5e1;
  font-weight: 300;
}

.bottom-spacer {
  height: 40rpx;
}
